<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment />
	<entry key="modifyCropPrice">
	    UPDATE
	           CROP C
	       SET C.CROP_PRICE = ?
	     WHERE C.CROP_ID = ?
	</entry>
	
	<entry key="modifyHousePrice">
	    UPDATE
	           USER_INFO U
	       SET U.HOUSE_PRICE = ?
	</entry>
	<entry key="selectCropPrice">
	    SELECT
	           CROP_NAME
	         , CROP_PRICE
	      FROM CROP
	</entry>
	<entry key="selectFoodPrice">
	    SELECT
	           FOOD_NAME
	         , FOOD_PRICE
	      FROM FOOD
	</entry>
	<entry key="modifyFoodPrice">
	    UPDATE
	           FOOD F
	       SET F.FOOD_PRICE = ?
	     WHERE F.FOOD_ID = ?
	</entry>
	<entry key="selectFoodRecipe">
	    SELECT
	           FOOD_ID
	         , CROP_RQ_AMOUNT
	      FROM RECIPE
	</entry>
	<entry key="modifyFoodRecipe">
	    UPDATE
	           RECIPE R
	       SET R.CROP_RQ_AMOUNT = ?
	     WHERE R.FOOD_ID = ?
	</entry>
</properties>
